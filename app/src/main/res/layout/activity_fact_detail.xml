<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FactDetailActivity">

    <TextView
            android:id="@+id/catFactDetailText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="kjhkjhkhjkjhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhhh"
            tools:ignore="MissingConstraints"
            android:textColor="#000000"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="76dp"
            app:layout_constraintTop_toTopOf="parent" android:textAlignment="viewStart"
            android:gravity="bottom|center_horizontal"/>

    <ImageView

            android:layout_width="0dp"
            android:layout_height="300dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/randomImg"
            android:scaleType="center"
            tools:ignore="MissingConstraints" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/catFactDetailText"/>
    <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/imgLoadProgressBar"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/randomImg" app:layout_constraintTop_toTopOf="@+id/randomImg"
            app:layout_constraintStart_toStartOf="@+id/randomImg" app:layout_constraintEnd_toEndOf="@+id/randomImg"/>
    <Button
            android:text="@string/add_btn"
            android:layout_width="143dp"
            android:layout_height="45dp"
            android:id="@+id/AddDelBtn"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:textAlignment="center" android:layout_marginBottom="25dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>